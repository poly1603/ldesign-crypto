{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "sourceMap": true
  },
  "include": [
    "src/index.ts",
    "src/index-lib.ts",
    "src/algorithms/**/*.ts",
    "src/core/**/*.ts",
    "src/utils/**/*.ts",
    "src/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "es",
    "esm",
    "cjs",
    "types",
    "__tests__",
    "tests",
    "test",
    "e2e",
    "examples",
    "*.test.ts",
    "*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/adapt/**/*",
    "src/vue.ts",
    "src/core/encrypted-storage.ts",
    "src/core/modern-ciphers.ts",
    "src/core/wasm-accelerator.ts",
    "src/core/wasm-builder.ts",
    "src/core/stream.ts",
    "src/core/quantum-safe.ts",
    "src/engine/**/*",
    "src/algorithms/advanced.ts"
  ]
}
