{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "baseUrl": ".",
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "types": ["node", "vitest/globals"],
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "es",
    "esm",
    "cjs",
    "types",
    "__tests__",
    "tests",
    "test",
    "e2e",
    "examples",
    "*.test.ts",
    "*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
